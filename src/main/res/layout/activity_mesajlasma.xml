<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#201E1B"
    tools:context=".mesajlasma_ve_konu_acma.Mesajlasma">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/soru_isareti"
        android:layout_gravity="right"
        android:id="@+id/ayarlar_imageview"

        />




</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mesajlaşma_listview"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:layout_weight="4"
        >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <EditText
            android:id="@+id/editText_mesaj_yaz"
            android:hint="Mesaj Yaz."
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:layout_marginLeft="3dp"
            android:layout_width="fill_parent">
        </EditText>
        <Button
            android:text="Gönder."
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:id="@+id/gonder_buttons"
            android:onClick="gonder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        />


    </LinearLayout>
</LinearLayout>