<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/siyah"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/koyu_siyah"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/sorulan_kisi_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Sorununuz hakkındaki detayları giriniz."
            android:textColor="@color/buton"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >


    <EditText
        android:id="@+id/konu_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@color/text_beyaz"
        android:hint="Konu :" />





</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
android:id="@+id/sorun_liener"
   android:orientation="vertical"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/soru_sorma_alanı_edittext"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"

        android:background="@color/text_beyaz"
        android:hint="Sorunu buraya yazınız..."
        android:textColorHint="@color/koyu_siyah" />




</LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_ımage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamere"

            />

        <ImageView
            android:id="@+id/second_ımage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamere" />

        <ImageView
            android:id="@+id/third_ımage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamere" />

        <ImageView
            android:id="@+id/forth_ımage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamere" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ekle :"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gallery_ımageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/gorsel" />

        <ImageView
            android:id="@+id/camera_ımageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/kamere" />

        <Button
            android:id="@+id/gonders_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="8dp"
            android:background="@color/buton"
            android:text="Gönder"
            android:textColor="@color/text_beyaz"

            />

    </LinearLayout>



</RelativeLayout>