<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DC000000"
    >
    <TextView
        android:background="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Ask your Question"
        android:gravity="center"
        android:textColor="#FFCC4F"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="19dp"
        android:text="Expert"
        android:textColor="#FFCC4F"
        android:gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="19dp"
        android:text="Searching"
        android:textColor="#FFCC4F"
        android:gravity="center"/>

    <!-- <LinearLayoutandroid:layout_width="match_parent"android:layout_height="wrap_content"android:orientation="horizontal"android:layout_marginTop="30dp"android:layout_marginRight="30dp"android:layout_marginLeft="30dp"><ImageViewandroid:layout_width="50dp"android:layout_height="45dp"android:src="@drawable/arama"android:background="#FFFFFF"/><AutoCompleteTextViewandroid:layout_width="match_parent"android:layout_height="45dp"android:background="#FFFFFF" android:id="@+id/auto_text_completer_tum_kullanıcılar"android:hint="Örnek : İnşaat Mühendisi"/></LinearLayout> -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            card_view:cardBackgroundColor="#F10000"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            android:id="@+id/first_cardivew"
            >

            <!-- Main Content View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Software"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"></Space>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            card_view:cardBackgroundColor="#F10000"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            android:id="@+id/second_cardivew"
            >

            <!-- Main Content View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enginering"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">



        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            card_view:cardBackgroundColor="#F10000"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            android:id="@+id/third_cardivew"
            >

            <!-- Main Content View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Healty"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"></Space>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            card_view:cardBackgroundColor="#F10000"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            android:id="@+id/forth_cardivew"

            >

            <!-- Main Content View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Design"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>






    </LinearLayout>



</LinearLayout>









</LinearLayout>