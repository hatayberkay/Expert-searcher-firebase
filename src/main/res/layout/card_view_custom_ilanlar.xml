<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/koyu_siyah"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profil_foto_imageview"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/profil_foto"

                />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/isim_soyadı_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/meslek_card_textview"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-28dp"
                android:layout_marginStart="108dp"
                android:text="isim + soyadı"
                android:textColor="@color/buton"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meslek_card_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="38dp"
                android:text="meslek"
                android:textColor="@color/buton"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- <TextView
                android:id="@+id/cevapladığı_soru_sayısı"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/meslek_card_textview"
                android:layout_marginBottom="17dp"
                android:text="Cevapladığı soru sayısı : "
                android:textColor="@color/buton"
                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/sehir_card_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="119dp"
                android:text="Sehir"
                android:textColor="@color/buton"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>