<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#201E1B"

    >



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/profil_foto"
                android:id="@+id/profil_foto_imageview"

                />

                        <TextView
                            android:id="@+id/isim_card_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="İsim"
                        android:textColor="@color/buton"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginRight="50dp"


                            />


                        <TextView
                            android:id="@+id/meslek_card_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="meslek"
                            android:textColor="@color/buton"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginRight="50dp"


                            />



                        <TextView
                            android:id="@+id/konum_card_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Konum"
                            android:textColor="@color/buton"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginRight="50dp"


                            />
        </LinearLayout>


    </android.support.v7.widget.CardView>


<Button
    android:id="@+id/soru_sor_ana_sayfa_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Soru sor! "
    android:background="@color/buton"
    android:textColor="@color/text_beyaz"
    android:textSize="20dp"
    android:textStyle="bold"
    />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hakkında"
        android:textSize="30dp"
        android:textColor="@color/buton"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/hakkımda_textview_ana_sayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ben böyleyim."
        android:textSize="20dp"
        android:textColor="@color/text_beyaz"
        android:textStyle="bold"
        android:scrollbars = "vertical"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eğitim"
        android:textSize="30dp"
        android:textColor="@color/buton"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/egitim_textview_ana_sayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Egitim hakkında"
        android:textColor="@color/text_beyaz"
        android:textStyle="bold"
        android:textSize="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uzmanlık Alanları"
        android:textColor="@color/buton"
        android:textStyle="bold"
        android:textSize="30dp"

        />

    <TextView
        android:id="@+id/uzmanlık_alanları_textview_ana_sayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_beyaz"
        android:textStyle="bold"
        android:textSize="30dp"

        />


</LinearLayout>